<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/paneltipocambio1"
        android:layout_width="wrap_content"
        android:layout_height="204dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF">

        <TableRow
            android:id="@+id/rowcc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                android:layout_width="52dp"
                android:layout_gravity="center"
                android:text="Libor"
                android:textColor="#070707" />

            <TextView
                android:layout_width="29dp"
                android:layout_gravity="center"
                android:text="="
                android:textColor="#1F1E1E" />

            <TextView
                android:layout_width="101dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:text="Tasa Libor 6 meses"
                android:textColor="#1F1E1E" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:text="2.5870"
                android:textColor="#1F1E1E" />

            <TextView
                android:layout_width="109dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="(a partir del 13-05-2019)"
                android:textColor="#1F1E1E" />


        </TableRow>

        <TableRow
            android:id="@+id/rowcc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp">

            <TextView
                android:layout_width="52dp"
                android:layout_gravity="center"
                android:text="PR"
                android:textColor="#070707" />

            <TextView
                android:layout_width="29dp"
                android:layout_gravity="center"
                android:text="="
                android:textColor="#1F1E1E" />

            <TextView
                android:layout_gravity="center"
                android:text="Tasa Prime"
                android:textColor="#1F1E1E" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:text="5.5000"
                android:textColor="#1F1E1E" />

            <TextView
                android:layout_width="109dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:text="(a partir del 20-12-2018)"
                android:textColor="#1F1E1E" />


        </TableRow>

        <TableRow
            android:id="@+id/rowcc3"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginTop="13dp">

            <TextView
                android:layout_width="52dp"
                android:layout_gravity="center"
                android:text="TBP"
                android:textColor="#070707" />

            <TextView
                android:layout_width="29dp"
                android:layout_gravity="center"
                android:text="="
                android:textColor="#1F1E1E" />

            <TextView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:text="Tasa Basica Pasiva"
                android:textColor="#1F1E1E" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:text="6.1500"
                android:textColor="#1F1E1E" />

            <TextView
                android:layout_width="109dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:text="(a partir del 09-05-2019)"
                android:textColor="#1F1E1E" />


        </TableRow>
    </TableLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.synnapps.carouselview.CarouselView
        android:id="@+id/carouselView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:fillColor="#E01C25"
        app:pageColor="#00000000"
        app:radius="6dp"
        app:slideInterval="3000"
        app:strokeColor="#FF777777"
        app:strokeWidth="1dp" />

    <TableLayout
        android:id="@+id/panel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/panel_clean">

        <TableRow
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="0dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/circle_1"
                android:fontFamily="monospace"
                android:text="@string/indi_finan"
                android:textAlignment="center"
                android:textColor="#204180"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/circle_2"
                android:fontFamily="monospace"
                android:text="@string/of_y_caj"
                android:textAlignment="center"
                android:textColor="#204180" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/circle_3"
                android:fontFamily="monospace"
                android:text="@string/atenci_n_al_cliente"
                android:textAlignment="center"
                android:textColor="#204180"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/circle_4"
                android:fontFamily="monospace"
                android:text="@string/beneficios_bcr_tarjetas"
                android:textAlignment="center"
                android:textColor="#204180" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/circle_5"
                android:fontFamily="monospace"
                android:text="@string/solicitudes_en_l_nea"
                android:textAlignment="center"
                android:textColor="#204180" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/circle_6"
                android:fontFamily="monospace"
                android:text="@string/iniciar_sesi_n"
                android:textAlignment="center"
                android:textColor="#204180" />


        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:baselineAligned="false"
                android:contentDescription="@string/todo"
                app:srcCompat="@mipmap/do_lar"></ImageView>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="@string/todo"
                app:srcCompat="@mipmap/euro_disabled" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="@string/change_rate"
                android:textAlignment="viewStart"
                android:textColor="#204180" />
        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">

            <Space
                android:layout_width="150dp"
                android:layout_height="wrap_content" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:contentDescription="@string/todo"
                app:srcCompat="@mipmap/logo"></ImageView>
        </TableRow>


    </TableLayout>
</LinearLayout>